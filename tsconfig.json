{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "*": ["node_modules/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
